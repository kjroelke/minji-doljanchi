---
import AnimalPrintSection from '../components/AnimalPrintSection.astro';
import bounce from '../assets/bounce.jpeg';
import Photo from '../components/Photo.astro';
---

<AnimalPrintSection
	color='light'
	opacity={0.8}
>
	<div class='row justify-content-center align-items-center row-gap-4'>
		<div class='col-6 col-md-4'>
			<Photo
				photo={bounce}
				alt='Olivia grabs her feet with a huge smile in her crib'
			/>
		</div>
		<div class='col-12 col-md-6'>
			<h1 class='display-1 mb-0 text-center'>
				Our wild one is turning one!
			</h1>
		</div>
	</div>
	<div class='row justify-content-center'>
		<div class='col-8 text-center'>
			<p class='display-5 font-body'>
				Join us to celebrate Olivia Min-Ji’s 첫돌
			</p>
			<a
				href='#details'
				class='btn btn-primary'
				>See Details</a
			>
		</div>
	</div>
</AnimalPrintSection>
